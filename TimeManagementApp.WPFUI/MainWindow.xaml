<Window x:Class="TimeManagementApp.WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagementApp.WPFUI" 

        xmlns:viewModels ="clr-namespace:TimeManagementApp.WPFUI.ViewModels"
        xmlns:views ="clr-namespace:TimeManagementApp.WPFUI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModels:SignInVM}">
                <views:SignInView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:SignUpVM}">
                <views:SignUpView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:MainPageVM}">
                <views:MainPage />
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
